---
const {
  eyebrow = "Use Cases",
  title = "Built for People Who Sell",
  items = [],
} = Astro.props;
---
<section class="mx-auto max-w-6xl px-6 py-24" aria-labelledby="usecases-title">
  <div class="mb-12 flex flex-col gap-4">
    <p class="text-sm uppercase tracking-[0.4em] text-scanium-cyan">{eyebrow}</p>
    <h2 id="usecases-title" class="section-title text-3xl font-semibold text-white sm:text-4xl">
      {title}
    </h2>
  </div>

  <div class="space-y-10">
    {items.map((item, index) => (
      <div
        class={`use-case grid items-center gap-8 rounded-3xl border border-white/10 bg-navy-light/50 p-8 ${
          index % 2 === 1 ? "lg:grid-cols-[1fr_1.1fr]" : "lg:grid-cols-[1.1fr_1fr]"
        }`}
      >
        <div class={index % 2 === 1 ? "order-2 lg:order-1" : undefined}>
          <h3 class="text-2xl font-semibold text-white">{item.title}</h3>
          <p class="mt-3 text-text-muted">{item.text}</p>
        </div>
        <div
          class={`relative h-48 rounded-2xl border border-white/10 ${
            index % 2 === 1
              ? "order-1 bg-gradient-to-br from-scanium-yellow/10 to-scanium-blue/10 lg:order-2"
              : index % 3 === 0
                ? "bg-gradient-to-br from-scanium-blue/10 to-scanium-cyan/10"
                : "bg-gradient-to-br from-scanium-cyan/10 to-scanium-purple/10"
          }`}
        >
          <div class="absolute inset-6 rounded-xl border border-white/10"></div>
        </div>
      </div>
    ))}
  </div>
</section>
