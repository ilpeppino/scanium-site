---
const {
  eyebrow = "Features",
  title = "Intelligent Scanning, Instant Results",
  items = [],
} = Astro.props;
---
<section class="features-grid relative mx-auto max-w-6xl px-6 py-24" aria-labelledby="features-title">
  <div class="mb-12 flex flex-col gap-4">
    <p class="text-sm uppercase tracking-[0.4em] text-scanium-cyan">{eyebrow}</p>
    <h2 id="features-title" class="section-title text-3xl font-semibold text-white sm:text-4xl">
      {title}
    </h2>
  </div>
  <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
    {items.map((item) => (
      <div class="feature-card card-sheen glow-border rounded-2xl border border-white/5 p-6">
        <div class="mb-4 flex h-10 w-10 items-center justify-center rounded-xl bg-scanium-cyan/20 text-xs font-semibold text-scanium-cyan">
          {item.code}
        </div>
        <h3 class="text-lg font-semibold text-white">{item.title}</h3>
        <p class="mt-3 text-sm text-text-muted">{item.text}</p>
      </div>
    ))}
  </div>
</section>
