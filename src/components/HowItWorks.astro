---
const {
  eyebrow = "Workflow",
  title = "From Camera to Cash in Seconds",
  steps = [],
} = Astro.props;
---
<section class="how-it-works relative mx-auto max-w-6xl px-6 py-24" aria-labelledby="how-title">
  <div class="mb-12 flex flex-col gap-4">
    <p class="text-sm uppercase tracking-[0.4em] text-scanium-cyan">{eyebrow}</p>
    <h2 id="how-title" class="section-title text-3xl font-semibold text-white sm:text-4xl">
      {title}
    </h2>
  </div>

  <div class="relative">
    <svg
      class="absolute left-4 top-6 hidden h-full w-full text-scanium-cyan/40 md:block"
      viewBox="0 0 900 180"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-dasharray="6 10"
    >
      <path d="M20 90 H880" />
    </svg>
    <div class="grid gap-10 md:grid-cols-4">
      {steps.map((step) => (
        <div class="step rounded-2xl border border-white/10 bg-navy-light/70 p-6 text-center">
          <div class="mx-auto mb-4 flex h-12 w-12 items-center justify-center rounded-full bg-scanium-cyan/20 text-xs font-semibold text-scanium-cyan">
            {step.code}
          </div>
          <h3 class="text-lg font-semibold text-white">{step.title}</h3>
          <p class="mt-2 text-sm text-text-muted">{step.text}</p>
        </div>
      ))}
    </div>
  </div>
</section>
